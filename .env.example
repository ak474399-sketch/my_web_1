# ===========================================
# Gemini API
# ===========================================
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# Supabase (从 Supabase Dashboard → Settings → API 获取)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
# 历史记录存储桶名称（需在 Supabase Storage 中创建，公开、允许 JPG/PNG、单文件 10MB）
SUPABASE_RESTORATIONS_BUCKET=restorations

# ===========================================
# NextAuth
# ===========================================
# 生成方式: openssl rand -base64 32
NEXTAUTH_SECRET=your_random_secret_here
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# Google OAuth (从 Google Cloud Console → APIs → Credentials 获取)
# Authorized redirect URI: http://localhost:3000/api/auth/callback/google
# ===========================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ===========================================
# Firebase (Analytics) — 从 Firebase Console → 项目设置 → 您的应用 获取
# ===========================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:xxxxxxxxxx
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
